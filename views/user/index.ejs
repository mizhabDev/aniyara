<main>
    <main>
        <!-- Hero Carousel Section -->
        <section class="hero-carousel">
            <div class="carousel-container">
                <!-- Carousel Slides -->
                <div class="carousel-slides">
                    <!-- Slide 1 -->
                    <div class="carousel-slide active">
                        <div class="slide-content">
                            <div class="slide-image">
                                <img src="/images/homeImage/giftTheam.png" alt="Gift Box">
                            </div>
                            <div class="slide-text">
                                <h2>Find joy in every little detail.</h2>
                                <p>At Aniyara, every gift tells a story.</p>
                                <div class="brand-name">ANIYARA</div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Slide 2 -->
                    <div class="carousel-slide">
                        <div class="slide-content">
                            <div class="slide-image">
                                <img src="/images/homeImage/fancy.png" alt="Special Moments">
                            </div>
                            <div class="slide-text">
                                <h2>Create memories that last forever.</h2>
                                <p>Quality products for your special moments.</p>
                                <div class="brand-name">ANIYARA</div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Slide 3 -->
                    <div class="carousel-slide">
                        <div class="slide-content">
                            <div class="slide-image">
                                <img src="/images/homeImage/toys.png" alt="Elegant Design">
                            </div>
                            <div class="slide-text">
                                <h2>Elegance in simplicity.</h2>
                                <p>Carefully crafted with love and attention.</p>
                                <div class="brand-name">ANIYARA</div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Carousel Navigation -->
                <div class="carousel-nav">
                    <button class="carousel-indicator active" data-slide="0"></button>
                    <button class="carousel-indicator" data-slide="1"></button>
                    <button class="carousel-indicator" data-slide="2"></button>
                </div>
                
                <!-- Carousel Controls -->
                <div class="carousel-controls">
                    <button class="carousel-control prev" aria-label="Previous slide">
                        <i class="fas fa-chevron-left"></i>
                    </button>
                    <button class="carousel-control next" aria-label="Next slide">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
            </div>
        </section>

    <!-- Product Sections -->
    <% Object.entries(productSections).forEach(([sectionKey, section]) => { %>
        <section class="<%= sectionKey %>">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title"><%= section.title %></h2>
                    <a href="/shop/<%= sectionKey %>" class="shop-now-btn">
                        SHOP NOW 
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
                
                <div class="product-grid">
                    <% section.products.forEach(product => { %>
                        <div class="product-card">
                            <div class="product-image">
                                <img src="/images/homeImage/<%= product.image %>.png" alt="<%= product.title %>">
                                <% if (product.isNew) { %>
                                    <span class="badge">New</span>
                                <% } %>
                                <button class="quick-view-btn" title="Quick View">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <div class="product-info">
                                <h3 class="product-title"><%= product.title %></h3>
                                <div class="product-rating">
                                    <% for(let i = 0; i < 5; i++) { %>
                                        <i class="fas fa-star"></i>
                                    <% } %>
                                    <span>5.0</span>
                                </div>
                                <div class="product-price">$<%= product.price %></div>
                                <div class="product-buttons">
                                    <button class="add-to-cart-btn">ADD TO CART</button>
                                    <button class="wishlist-btn" title="Add to Wishlist">
                                        <i class="far fa-heart"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </section>
    <% }) %>

   
    <!-- Quick View Modal -->
     
    <div id="quickViewModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <div class="modal-body">
                <div class="product-image">
                    <img id="modalImage" src="" alt="Product Image">
                </div>
                <div class="product-details">
                    <h2 id="modalTitle"></h2>
                    <div class="product-rating">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="product-price" id="modalPrice"></div>
                    <div class="quantity">
                        <label>Quantity:</label>
                        <div class="quantity-input">
                            <button class="quantity-btn minus">-</button>
                            <input type="number" value="1" min="1">
                            <button class="quantity-btn plus">+</button>
                        </div>
                    </div>
                    <div class="modal-buttons">
                        <button class="modal-add-to-cart">Add to Cart</button>
                        <button class="modal-wishlist" title="Add to Wishlist">
                            <i class="far fa-heart"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

