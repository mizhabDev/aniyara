            <div class="order-item">
              <div class="order-header">
                <div class="order-id">#ORD-7615</div>
                <div class="order-date">Mar 17, 2024</div>
                <div class="order-status completed">Completed</div>
              </div>
              <div class="order-details">
                <div>1 item</div>
                <div class="order-total">$95.20</div>
              </div>
            </div>

            <div class="order-item">
              <div class="order-header">
                <div class="order-id">#ORD-6832</div>
                <div class="order-date">Feb 02, 2024</div>
                <div class="order-status completed">Completed</div>
              </div>
              <div class="order-details">
                <div>2 items</div>
                <div class="order-total">$143.75</div>
              </div>
            </div>

            <div class="view-more">
              <a href="#">View all 14 orders</a>
            </div>
          </div>
        </div>

        <div class="tab-content" id="details-tab">
          <div class="info-section">
            <h3>Contact Information</h3>
            <div class="info-grid">
              <div class="info-row">
                <div class="info-label">Email</div>
                <div class="info-value"><%= user.email %></div>
              </div>
              <div class="info-row">
                <div class="info-label">Phone</div>
                <div class="info-value">+1 (555) 123-4567</div>
              </div>
            </div>
          </div>

          <div class="info-section">
            <h3>Shipping Address</h3>
            <div class="address">
              <p><%= user.name %></p>
              <p>123 Main Street</p>
              <p>Apt 4B</p>
              <p>New York, NY 10001</p>
              <p>United States</p>
