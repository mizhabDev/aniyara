        height: 200px;
        padding: 12px;
        border: 1px solid #d1d5db;
        border-radius: 4px;
        font-size: 14px;
        resize: vertical;
    }

    .notes-controls {
        display: flex;
        justify-content: flex-end;
        margin-top: 16px;
    }

    /* Icons (inline SVG) */
    .icon {
        width: 16px;
        height: 16px;
        margin-right: 4px;
    }
</style>

