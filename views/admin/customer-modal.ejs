    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const tabs = document.querySelectorAll('.tab');
            const tabContents = document.querySelectorAll('.tab-content');
            
            tabs.forEach(function(tab, index) {
                tab.addEventListener('click', function() {
                    // Deactivate all tabs and contents
                    tabs.forEach(function(t) {
                        t.classList.remove('active');
                    });
                    tabContents.forEach(function(c) {
                        c.classList.remove('active');
                    });
                    
                    // Activate clicked tab and corresponding content
                    tab.classList.add('active');
                    tabContents[index].classList.add('active');
                });
            });

            // Toggle block/unblock functionality
            const blockBtn = document.querySelector('.btn-block');
            blockBtn.addEventListener('click', function() {
                const statusIcon = document.querySelector('.status-icon');
                const statusValue = document.querySelector('.stat-value:last-child');
                
                if (this.classList.contains('btn-block')) {
                    // Switch to blocked state
                    this.classList.remove('btn-block');
                    this.classList.add('btn-unblock');
                    this.textContent = 'Unblock Customer';
                    
                    statusIcon.classList.remove('active-status');
                    statusIcon.classList.add('blocked-status');
                    
                    statusValue.classList.remove('active');
                    statusValue.classList.add('blocked');
                    statusValue.textContent = 'Blocked';
                } else {
                    // Switch to active state
                    this.classList.remove('btn-unblock');
                    this.classList.add('btn-block');
                    this.textContent = 'Block Customer';
                    
                    statusIcon.classList.remove('blocked-status');
                    statusIcon.classList.add('active-status');
                    
                    statusValue.classList.remove('blocked');
                    statusValue.classList.add('active');
                    statusValue.textContent = 'Active';
                }
            });

            // Close modal functionality
            document.querySelector('.btn-close').addEventListener('click', function() {
                document.querySelector('.modal-overlay').style.display = 'none';
            });
        });
    </script>
