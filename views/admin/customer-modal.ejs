    }

    /* Activity Log */
    .activity-log {
        border-left: 2px solid #e5e7eb;
        padding-left: 16px;
        margin-left: 8px;
    }

    .activity-item {
        position: relative;
        padding-bottom: 24px;
    }

    .activity-item::before {
        content: "";
        position: absolute;
        left: -23px;
        top: 0;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background-color: #2563eb;
