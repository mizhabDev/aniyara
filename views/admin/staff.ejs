<%- include('../admin-partials/header') %>
<link rel="stylesheet" href="/css/admin_css/staff.css">

<div id="staff-page" class="main-content">
  <div class="header">
    <h1 class="page-title">Staff Management</h1>
    <button class="btn btn-primary">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="12" y1="5" x2="12" y2="19"></line>
        <line x1="5" y1="12" x2="19" y2="12"></line>
      </svg>
      Add New Staff
    </button>
  </div>

  <div class="staff-grid">
    <!-- Staff Card -->
    <div class="staff-card">
      <img src="/api/placeholder/80/80" alt="Staff Member" class="staff-avatar">
      <div class="staff-info">
        <h3 class="staff-name">John Doe</h3>
        <span class="staff-role">Store Manager</span>
        <div class="staff-stats">
          <div class="stat-item">
            <span class="label">Email:</span>
            <span class="value">john.doe@aniyara.com</span>
          </div>
          <div class="stat-item">
            <span class="label">Joined:</span>
            <span class="value">Jan 15, 2024</span>
          </div>
          <div class="stat-item">
            <span class="label">Status:</span>
            <span class="status active">Active</span>
          </div>
        </div>
      </div>
      <div class="staff-actions">
        <button class="btn btn-sm">Edit</button>
        <button class="btn btn-sm btn-danger">Deactivate</button>
      </div>
    </div>
  </div>
</div>

<%- include('../admin-partials/footer') %>